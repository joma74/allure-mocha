{
  "name": "mocha-allure-reporter",
  "version": "1.4.0",
  "description": "Mocha reporter for Allure framework",
  "main": "index.js",
  "repository": "git@github.com:allure-framework/mocha-allure-reporter.git",
  "scripts": {
	"tsc_validate": "/bin/bash -c 'node_modules/typescript/bin/tsc --project ./jsconfig.json --noEmit true --traceResolution true | tee target/tsc.trace1.log; echo $?'",
	"tsc_listFiles": "node_modules/typescript/bin/tsc --project ./jsconfig.json --noEmit true --listFiles",
    "pretest": "eslint --ignore-path=.gitignore .",
    "test": "npm run unit && npm run e2e-test",
    "unit": "mocha test/unit/",
    "e2e-clean": "rm -rf test/e2e/results",
    "e2e-test": "npm run e2e-clean && node test/e2e/main.spec.js && allure generate test/e2e/results --clean -o test/e2e/report"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/libxmljs": "^0.18.1",
    "@types/mocha": "^5.2.5",
    "@types/mockery": "^1.4.29",
    "@types/node": "^10.9.4",
    "@types/object-assign": "^4.0.30",
    "@types/sinon": "^5.0.2",
    "@types/sinon-chai": "^3.2.0",
    "allure-commandline": "^2.0.0",
    "chai": "^4.1.2",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.19.1",
    "libxmljs": "^0.18.0",
    "mocha": "^5.1.1",
    "mockery": "^2.0.0",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "typescript": "^3.1.0-dev.20180901"
  },
  "dependencies": {
    "allure-js-commons": "https://github.com/joma74/allure-js-commons.git"
  },
  "peerDependencies": {
    "mocha": "*"
  }
}
